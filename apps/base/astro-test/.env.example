# ============================================================================
# APP CONFIGURATION
# ============================================================================
PUBLIC_NAME_APP=MyApp
NODE_ENV=development
PORT=3000
PUBLIC_URL=http://localhost:3000
PUBLIC_PORT=4321

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp_db
DB_USER=postgres
DB_PASS=your_db_password
DATABASE_URL=postgresql://postgres:your_db_password@localhost:5432/myapp_db

# ============================================================================
# CACHE (Redis/Dragonfly)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password  # Obligatorio en producción

# ============================================================================
# JWT - SEGURIDAD (mínimo 32 caracteres)
# ============================================================================
JWT_KEY=your-super-secret-key-minimum-32-characters
JWT_EXPIRES_IN=1h
# JWT_REFRESH_KEY=your-refresh-secret-key-min-32-chars  # Obligatorio en producción
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# HMAC (mínimo 16 caracteres)
# ============================================================================
PUBLIC_HMAC_KEY=your-hmac-key-16-chars

# ============================================================================
# STORAGE (MinIO/RustFS)
# ============================================================================
RUSTFS_ENDPOINT=localhost
RUSTFS_PORT=9000
RUSTFS_ROOT_USER=RUSTFS_user
RUSTFS_ROOT_PASSWORD=RUSTFS_password_min_8
RUSTFS_BUCKET_NAME=uploads
RUSTFS_REGION=us-east-1
# RUSTFS_INTERNAL_ENDPOINT=http://minio:9000  # Docker internal
# RUSTFS_PUBLIC_ENDPOINT=http://localhost:9000  # Browser access

# ============================================================================
# MAIL (SMTP)
# ============================================================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_mail_user
MAIL_PASS=your_mail_password
# MAIL_FROM=noreply@example.com
# MAIL_FROM_NAME=MyApp

# ============================================================================
# SECURITY EXTRAS
# ============================================================================
CORS_ORIGINS=*
THROTTLE_TTL=60
THROTTLE_LIMIT=100
LOG_LEVEL=info

# ============================================================================
# PUSH NOTIFICATIONS (VAPID) - Optional
# ============================================================================
# PUBLIC_VAPID_KEY=your_public_vapid_key
# PRIVATE_VAPID_KEY=your_private_vapid_key
