---
import { Image } from "astro:assets";
import AddToCart from "../components/AddToCart.jsx";
import CartFlyout from "../components/CartFlyout.jsx";
import Layout from "../layouts/Layout.astro";

const products = [
    {
        id: "1",
        name: "Astro Hoodie",
        price: 50,
        image: "https://astro.build/assets/store/hoodie.png",
    },
    { id: "2", name: "Astro Cap", price: 25, image: "https://astro.build/assets/store/cap.png" },
    {
        id: "3",
        name: "Astro Sticker",
        price: 5,
        image: "https://astro.build/assets/store/sticker.png",
    },
];
---

<Layout>
    <main class="max-w-4xl mx-auto p-4">
        <h1 class="text-4xl font-bold text-center mb-12 text-purple-400">üõçÔ∏è Nano Stores Shop</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {products.map(product => (
                <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 flex flex-col items-center text-center">
                    <div class="h-48 flex items-center justify-center mb-4 bg-gray-900 w-full rounded">
                        <span class="text-6xl">üì¶</span>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">{product.name}</h3>
                    <p class="text-2xl text-green-400 font-bold mb-6">${product.price}</p>
                    
                    <!-- 
                        ¬°AQU√ç EST√Å LA MAGIA! 
                        client:idle para que el bot√≥n funcione.
                    -->
                    <AddToCart client:idle item={product} />
                </div>
            ))}
        </div>

        <!-- 
            El carrito flota sobre todo. 
            client:load porque queremos que responda r√°pido si ya hay items.
        -->
        <CartFlyout client:load />

        <div class="mt-20 text-center">
            <a href="/" class="text-purple-400 hover:text-purple-300 underline">‚¨Ö Volver al Inicio</a>
        </div>
    </main>
</Layout>
